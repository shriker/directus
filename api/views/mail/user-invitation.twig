{% extends "mail/base.twig" %}
{% block content %}

<p>You have been invited to {{settings.global.project_name }}. Please click the link below to join:</p>

{% set invitation_url = settings.global.project_url|trim('/') ~ '?invitation_code=' ~ token %}
<p><a href="{{ invitation_url }}">{{ invitation_url }}</a></p>

<p>{{ t('Love,') }}<br>{{ settings.global.project_name }}</p>
{% endblock %}
